<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_5"/>

    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Name"
        android:padding="@dimen/space_15"
        android:text="Mukesh Gupta"
        android:textSize="@dimen/text_medium"/>


    <EditText
        android:id="@+id/mobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Mobile Number"
        android:inputType="phone"
        android:padding="@dimen/space_15"
        android:text="9987887829"
        android:textSize="@dimen/text_medium"/>


    <EditText
        android:id="@+id/amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Amount"
        android:inputType="phone"
        android:padding="@dimen/space_15"
        android:text=""
        android:textSize="@dimen/text_medium"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Reason (Optional)"
        android:inputType="text"
        android:padding="@dimen/space_15"
        android:textSize="@dimen/text_medium"/>

    <CheckBox
        android:id="@+id/saveBeneficiary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/space_15"
        android:text="Save Beneficiary"
        android:textSize="@dimen/text_medium"/>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_15"/>

    <Button
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_20"
        android:layout_marginRight="@dimen/space_20"
        android:background="@drawable/background_button"
        android:text="Transfer"
        android:textColor="@color/colorPrimary"/>


    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_15"/>

</LinearLayout>