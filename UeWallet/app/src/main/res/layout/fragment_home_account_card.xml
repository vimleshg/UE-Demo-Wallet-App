<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/space_10"
    app:cardBackgroundColor="@color/colorWhite"
    tools:context="com.userexperior.uewallet.fragment.HomeAccountCardFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        android:src="@drawable/ue_wallet_account_background"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:orientation="vertical"
        android:padding="@dimen/space_5">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Savings A/C No: 12345678909876543210"
            android:textSize="@dimen/text_medium"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/black"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Zeeshan Ali"
            android:textSize="@dimen/text_small"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/black"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/space_5"
            android:layout_weight="1"
            android:gravity="bottom">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Balance:\n\u20B9 20,000"
                android:gravity="left"
                android:textSize="@dimen/text_small"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@android:color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/text_small"
                android:gravity="right"
                android:text="My Card\nxxxx xxxx xxxx 1234"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@android:color/black"/>


        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
